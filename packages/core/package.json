{
  "name": "core",
  "displayName": "kozo-core",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "main": "out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run esbuild-base --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "yarn run esbuild-base --sourcemap",
    "watch": "yarn run esbuild-base --sourcemap --watch",
    "fmt": "prettier --write \"src/**/*.ts\"&& yarn run test -- --fix",
    "test": "eslint src --ext ts && tsc --noEmit"
  },
  "nx": {
    "targets": {
      "watch": {
        "outputs": [
          "{projectRoot}/out"
        ]
      }
    }
  },
  "activationEvents": [
    "onView:kozo"
  ],
  "contributes": {
    "commands": [
      {
        "command": "kozo.createEmptyKozo",
        "title": "Create empty kozo"
      },
      {
        "command": "kozo.viewGraph",
        "title": "View module dependency graph"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kozo",
          "title": "Kozo",
          "icon": "./resources/kozo-logo.svg"
        }
      ]
    },
    "views": {
      "kozo": [
        {
          "id": "kozo",
          "name": "Kozo"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "kozo",
        "contents": "Not a Kozo workspace. Create new one.\n[Create Kozo](command:kozo.createEmptyKozo)\nIf Kozo already exists, load that.\n[Load Kozo](command:kozo.viewGraph)\n",
        "when": "kozo.isViewWelcomeVisible == true"
      }
    ]
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "webview": "*"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.18.3",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.15.15",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "rxjs": "^7.8.0"
  }
}
